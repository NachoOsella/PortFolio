[m    [22;2m262 [22;32m+        let candidate = `${baseName}.${extension}`;
[m    [22;2m263 [22;32m+        let index = 2;
[m    [22;2m264 [22;32m+
[m    [22;2m265 [22;32m+        while (await pathExists(path.join(directory, candidate))) {
[m    [22;2m266 [22;32m+            candidate = `${baseName}-${index}.${extension}`;
[m    [22;2m267 [22;32m+            index += 1;
[m    [22;2m268 [22;32m+        }
[m    [22;2m269 [22;32m+
