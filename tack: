[m    [22;2m255 [22;32m+
[m    [22;2m256 [22;32m+    private async generateUniqueImageName(
[m    [22;2m257 [22;32m+        directory: string,
[m    [22;2m258 [22;32m+        originalName: string,
[m    [22;2m259 [22;32m+        extension: string,
[m    [22;2m260 [22;32m+    ): Promise<string> {
