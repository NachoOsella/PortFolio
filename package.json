{
  "name": "developer-portfolio",
  "version": "1.0.0",
  "description": "Full-stack developer portfolio with blog, admin dashboard, and NestJS API",
  "private": true,
  "workspaces": [
    "api",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build:content && npm run build:seo && npm run build:api && npm run build:frontend",
    "build:content": "tsx scripts/build-content.ts",
    "build:seo": "tsx scripts/generate-sitemap.ts",
    "build:api": "cd api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && npm run start:dev",
    "dev:frontend": "cd frontend && ng serve",
    "start": "cd api && npm run start:prod",
    "test": "npm run test:api && npm run test:frontend",
    "test:api": "cd api && npm run test",
    "test:frontend": "cd frontend && ng test",
    "lint": "npm run lint:api && npm run lint:frontend",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:frontend",
    "lint:api": "cd api && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix:api": "cd api && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix"
  },
  "keywords": [
    "portfolio",
    "angular",
    "nestjs",
    "blog"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "concurrently": "^8.2.2",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.2",
    "reading-time": "^1.5.0",
    "shiki": "^3.22.0",
    "tsx": "^4.21.0"
  }
}
